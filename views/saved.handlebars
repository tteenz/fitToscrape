<div class="container">
  {{#each articles}}
  <div class="card bg-light mb-3">
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <a href="{{link}}" class="card-link" target="_blank">{{link}}</a>
      <br> <br>
      <a data-articleId={{_id}} class="btn btn-warning unsave-btn">Delete</a>
      <a data-articleId={{_id}} class="btn btn-warning note-modal-btn" data-toggle="modal">Add note</a>
    </div>
  </div>
  {{/each}}
</div>


<div id="add-note-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="note-modal-title" class="modal-title"></h5>
      </div>
      <div class="modal-body container">
        <ul class="notes-list">
        </ul>
        <div class="form-group">
          <label for="note-area">Leave a Note!</label>
          <textarea name="new-note-area" class="form-control" id="note-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-warning note-save-btn" data-dismiss="modal">Save</button>

        </div>
      </div>
    </div>
  </div>
